<?xml version="1.0" encoding="utf-8"?>

<odoo>

        <record id="mrp_production_form_view_inherit" model="ir.ui.view">
            <field name="name">Mrp Production Inherit</field>
                <field name="model">mrp.production</field>
                <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
                <field name="arch" type="xml">

                	<field name="move_raw_ids" position="before">
             		
		
						<group col='2'>
							<field name="check_po"/>
						</group>
		

						<group col='8'>
							<group col='3'>
								<field name="user_id" attrs="{'invisible':['|',('check_po', '=', False)]}"/>
							</group>
							<group col='2'>
								<button name="generate_purchase_request" string="Generar Request" type="object" class="btn-primary" attrs="{'invisible':['|',('check_po', '=', False)]}"/>
							</group>							
						</group>  


                	</field>


					<xpath expr="//sheet/notebook/page[1]/field[@name='move_raw_ids']/tree[@editable='bottom']//field[11]" position="after">
						<field name="warehouse_quantity"/>
					</xpath>
        

            </field>
        </record>

</odoo>